---
import { type CollectionEntry } from "astro:content";
const { data } = Astro.props;

type NYTGame = CollectionEntry<"nyt-games">;

const { data: wordleData } = data.find((d: NYTGame) => d.id === "wordle");
---

<h3>Wordle</h3>
{
  wordleData.isItFinished ? (
    <>
      <p>Today's result:</p>
      <>
        {wordleData.results.split("\n").map((result, index) => {
          if (index === 0 || index === 1) {
            return null;
          }
          return <p class="result-line">{result}</p>;
        })}
      </>
    </>
  ) : (
    <p>Not done today's yet.</p>
  )
}

<style lang="scss">
  .result-line {
    margin-block-start: 0;
    margin-block-end: 0;
    line-height: 1em;
  }
</style>
