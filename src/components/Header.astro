<style lang="scss">
  .skip-link {
    position: absolute;
    top: 8px;
    left: 8px;

    &:not(:focus) {
      white-space: nowrap;
      width: 1px;
      height: 1px;
      overflow: hidden;
      border: 0;
      padding: 0;
      clip: rect(0 0 0 0);
      clip-path: inset(50%);
      margin: -1px;
    }
  }

  header {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    padding: 1.5rem;

    @media screen and (max-width: 500px) {
      flex-direction: column;
    }

    a {
      background: none;
    }
  }

  .logo {
    font-family: Briston;
    font-size: 2em;
    font-feature-settings: "swsh" on;
    text-decoration: none;
    color: var(--black);
    line-height: normal;
  }

  .divider {
    display: block;
    width: 0.1rem;
    height: 3.5rem;
    background-color: var(--black);
    margin: 0 1.5rem;

    @media screen and (max-width: 500px) {
      display: none;
    }
  }

  nav {
    ul {
      display: flex;
      flex-wrap: wrap;
      padding: 0;
      margin: 0;

      li {
        margin-inline-end: 1.5rem;

        a {
          color: var(--black);
          text-decoration: none;
        }

        button {
          background-color: transparent;
          border: none;
          cursor: pointer;
          display: flex;
          gap: 0.5rem;
          align-items: center;
          margin: 0;

          img {
            max-width: 1rem;
            transition: transform 0.3s;
          }

          &[aria-expanded="true"] {
            img {
              transform: rotate(180deg);
            }
          }
        }

        a,
        button > span {
          box-shadow: inset 0 0 0 0 var(--pink);
          margin: 0 -0.25rem;
          padding: 0 0.25rem;
          transition:
            color 0.3s ease-in-out,
            box-shadow 0.3s ease-in-out;

          &:hover {
            box-shadow: inset 100px 0 0 0 var(--pink);
          }
        }

        button {
          &:hover {
            span {
              box-shadow: inset 100px 0 0 0 var(--pink);
            }
          }
        }

        ul {
          position: absolute;
          display: flex;
          flex-direction: column;
          background-color: var(--white);
          border: 0.2rem solid var(--black);

          &.subnav {
            padding: 0.5rem;
            z-index: 1;
          }

          &[hidden] {
            display: none;
          }
        }
      }
    }
  }
</style>

<script>
  function toggleSubNav() {
    let expanded = this.getAttribute("aria-expanded") === "true" || false;
    this.setAttribute("aria-expanded", !expanded);
    let menu = this.nextElementSibling;
    menu.hidden = !menu.hidden;
  }

  document.addEventListener("DOMContentLoaded", function () {
    let subNavButton = document.getElementById("stuff-subnav");
    subNavButton?.addEventListener("click", toggleSubNav);
  });
</script>
