---
import BaseLayout from "@layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import PostList from "@components/PostList.astro";
import MyHCard from "@components/MyHCard.astro";

const lastThreePosts = (await getCollection("blog"))
    .sort(
        (a, b) =>
            new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
    )
    .slice(0, 3);
---

<BaseLayout>
    <h1>Hey there! My name is <em>Carol</em>.</h1>
    <h2>And this is my little home on the internet.</h2>

    <p>I'm a frontend engineer, community organiser, and dog mum ğŸ–¤ğŸ¾</p>
    <p>
        Sometimes I write about stuff here, but more often I don't to be honest.
    </p>
    <p>I'm always up for a chat though, so feel free to get in touch! ğŸ’Œ</p>

    <h3>Latest on the blog:</h3>
    <PostList posts={lastThreePosts} />
    <MyHCard />
</BaseLayout>
